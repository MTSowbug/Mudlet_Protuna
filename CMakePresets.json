{
    "version": 4,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 3
    },
    "configurePresets": [
      {
        "name": "Release",
        "description": "Build a release version of Mudlet",
        "binaryDir": "${sourceDir}/cmake-build-release",
        "generator": "Ninja",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "CMAKE_INSTALL_PREFIX": "/usr/local"
        }
      },
      {
        "name": "Debug",
        "description": "Build a debug version of Mudlet",
        "binaryDir": "${sourceDir}/cmake-build-debug",
        "generator": "Ninja",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_INSTALL_PREFIX": "/usr/local"
        }
      },
      {
        "name": "RelWithDebInfo",
        "description": "Build a release version of Mudlet with debug information",
        "binaryDir": "${sourceDir}/cmake-build-relwithdebinfo",
        "generator": "Ninja",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "RelWithDebInfo",
          "CMAKE_INSTALL_PREFIX": "/usr/local"
        }
      }
    ]
  }
